   
 
 {% extends 'Base-front.html.twig' %}
{% block title %}Edit Commande{% endblock %}



{% block body %}

<div class="container-xxl py-5">
        <div class="container">
            <div class="section-title text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                <p class=" fw-medium  text-primary" style="font-family: Permanent Marker, cursive;
  font-weight: 400;
  font-style: normal; font-size:30px;">Our organic products</p>
                <h1 class="display-6">Get your Eco-product Now!</h1>
            </div> 
               <div class="container-xxl py-5">
        <div class="container">
 <!-- products -->
<div class="product-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col">
                <input type="text" class="form-control" placeholder="Search by Name" id="searchName">
            </div>
            <div class="col">
                <input type="text" class="form-control" placeholder="Search by Price" id="searchPrice">
            </div>
        </div>
<br>
        <div class="row product-lists">
            {% for p in produits %}
            <div class="col-lg-4 col-md-6 text-center strawberry">
                <div class="single-product-item">
                    <div class="product-image">
                        <img src="{{ asset('front/img/' ~ p.image) }}" alt="{{ p.nomp }}" width="250" height="250">
                    </div>
                    <h3>{{ p.nomp }}</h3>
                    <p class="product-price"><span>{{ p.prix }} TND</span></p>
                    <p class="product-statut"><span>{{ p.descp }}</span></p>
                    <a href="{{ path('app_commande_new', {'id': p.id}) }}" class="boxed-btn black">Commander</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
<!-- end products -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        function searchProducts() {
            var name = $('#searchName').val().toLowerCase();
            var price = $('#searchPrice').val().toLowerCase();

            $('.product-lists .single-product-item').each(function () {
                var productName = $(this).find('h3').text().toLowerCase();
                var productPrice = $(this).find('.product-price span').text().toLowerCase();

                var nameMatch = productName.includes(name);
                var priceMatch = productPrice.includes(price);

                if (nameMatch && priceMatch) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        }

        $('#searchName, #searchPrice').on('keyup', function () {
            searchProducts();
        });
    });
</script>


    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-circle back-to-top"><i class="bi bi-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/Front/lib/wow/wow.min.js"></script>
    <script src="/Front/lib/easing/easing.min.js"></script>
    <script src="/Front/lib/waypoints/waypoints.min.js"></script>
    <script src="/Front/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="/Front/js/main.js"></script>

    {%endblock%}